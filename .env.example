# DoktorNaDohled Environment Variables
# Copy this file to .env.local and fill in your actual values

# Next.js Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="DoktorNaDohled"
NEXT_PUBLIC_APP_DESCRIPTION="AI konverzační platforma pro české zdravotnictví"

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key
NEXT_PUBLIC_SUPABASE_PROJECT_ID=your-project-id

# OpenAI Configuration  
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# Groq Configuration (Alternative AI Provider)
GROQ_API_KEY=your-groq-api-key

# Czech Healthcare API Configuration
CZECH_HEALTH_REGISTRY_API_KEY=your-czech-health-api-key
CZECH_HEALTH_REGISTRY_URL=https://data.gov.cz/api/

# Authentication & Security
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret
JWT_SECRET=your-jwt-secret

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
FROM_EMAIL=noreply@doktor-na-dohled.cz

# SMS Configuration (for appointment reminders)
SMS_API_KEY=your-sms-api-key
SMS_API_URL=https://api.sms-provider.com/

# File Upload Configuration
NEXT_PUBLIC_MAX_FILE_SIZE=5242880 # 5MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# Feature Flags
NEXT_PUBLIC_ENABLE_TELEMEDICINE=true
NEXT_PUBLIC_ENABLE_AI_CHAT=true
NEXT_PUBLIC_ENABLE_BOOKING=true
NEXT_PUBLIC_ENABLE_GDPR_DASHBOARD=true

# Analytics & Monitoring
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=GA-MEASUREMENT-ID
VERCEL_ANALYTICS_ID=your-vercel-analytics-id

# Error Tracking
SENTRY_DSN=your-sentry-dsn
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=your-sentry-project

# Performance Monitoring
NEXT_PUBLIC_PERFORMANCE_MONITORING=true

# Development & Debug
NODE_ENV=development
DEBUG=false
NEXT_PUBLIC_DEBUG=false

# Czech Specific Configuration
CZECH_LOCALE=cs-CZ
DEFAULT_TIMEZONE=Europe/Prague
CZECH_CURRENCY=CZK

# Healthcare Compliance
GDPR_RETENTION_DAYS=2555 # 7 years as per Czech healthcare law
PATIENT_DATA_ENCRYPTION_KEY=your-encryption-key
AUDIT_LOG_RETENTION_DAYS=3650 # 10 years for audit compliance

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Database Configuration (if using additional databases)
DATABASE_URL=postgresql://username:password@localhost:5432/doktor_na_dohled
REDIS_URL=redis://localhost:6379

# External Services
MAPS_API_KEY=your-google-maps-api-key # For location services
PAYMENT_GATEWAY_API_KEY=your-payment-api-key # For appointment fees

# Backup & Recovery
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key
BACKUP_SCHEDULE="0 2 * * *" # Daily at 2 AM

# Content Security Policy
CSP_REPORT_URI=https://your-csp-report-endpoint.com/report